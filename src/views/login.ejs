<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Register an Account or Login in your Account</p>

      <%- include('includes/messages'); %>

      <div class="row">

        <div class="col-lg my-5">
          <h4>Register</h4>
          <p>If you dont have an Account, Register Here:</p>

          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Your e-mail</label>
              <input type="email" class="form-control" name="email"  placeholder="Never Share your personal data">
            </div>
            <div class="form-group">
              <label>Your Password</label>
              <input type="password" class="form-control" name="password"  placeholder="Never Share your personal data">
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
          </form>

        </div>

        <div class="col-lg my-5">
          <h4>Login</h4>

          <p>If you have an Account, Make Login Here:</p>

          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Your e-mail</label>
              <input type="email" class="form-control" name="email" placeholder="Never Share your personal data">
            </div>
            <div class="form-group">
              <label>Your Password</label>
              <input type="password" class="form-control" name="password" placeholder="Never Share your personal data">
            </div>
            <button type="submit" class="btn btn-primary">Login </button>
          </form>

          
        </div>

      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>